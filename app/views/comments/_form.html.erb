<% if current_user %>
  <%= form_for [@post, Comment.new], remote: true do |f| %>
    <div class="form-group">
      <%= f.label :body %>
      <%= f.text_field :body, placeholder: "Enter comment" %>
    </div>
    <div class="form-group">
      <%= f.submit "Save Comment", class: "btn btn-success" %>
    </div>
  <% end %>
<% end %>
